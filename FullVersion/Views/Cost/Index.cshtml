    $(document).ready(function () {

        var tab = document.getElementById('hidTAB').value;
        $('#myTabs a[href="' + tab + '"]').tab('show');
    });



</script>
<script src="~/Select2/JScriptSelect2.js" type="text/javascript"></script>
<link href="~/Select2/select2.css" rel="stylesheet" type="text/css" />
<script type="text/javascript">

    $(function () {
        initDropdown();
    });

    function initDropdown() {
        $("#ddlfinyear,#ddlfinyear1,#ddlLoadType").select2({
            selectOnClose: true,
            minimumResultsForSearch: -1
        })

        $("#ddlType").select2({
            selectOnClose: true,
            minimumResultsForSearch: -1
        }
        ).on("change", function () {
           
            if ($("#ddlType").val() == 'Talent Mobility') {
                setTimeout(function () {

                    $('#Instruction1').hide();
                    $('#Instruction2').show();
                });
            } else {
                setTimeout(function () {

                    $('#Instruction2').hide();
                    $('#Instruction1').show();
                });

            }
           
        });
    }

</script>
<div style="padding-left: 50px; padding-right: 50px; padding-top: 15px">
    @*<input id="hidTAB" type="hidden" value="#menu2" />*@
    @Html.HiddenFor(m => m[5].hidTAB, new { id = "hidTAB" })
    <ul class="nav nav-tabs" id="myTabs">

        <li><a data-toggle="tab" href="#menu5">MI Quick Summary</a></li>

        <li class="active"><a data-toggle="tab" href="#menu2">MI Detailed Report Generation</a></li>

        <li><a data-toggle="tab" href="#home">Data Generation</a></li>

        <li><a data-toggle="tab" href="#menu3">Download</a></li>

        <li><a data-toggle="tab" href="#menu4">BackUp</a></li>

    </ul>

    <div class="tab-content">

        <div id="home" class="tab-pane fade" style="margin-top:50px">
            @using (Html.BeginForm())
            {



                <div style="margin:0px auto;width:180px;">
                    <div align="center" style="clear:both;padding-top:50px">
                        <div style="float:left">
                            <input id="Submit3" name="submit" type="submit" value="Submit" style="width:150px" class="btn btn-success" />
                        </div>

                    </div>
                </div>
            }
        </div>
        <div id="menu2" class="tab-pane fade" style="border-bottom:1px solid gray;border-left:1px solid gray;border-right:1px solid gray;height:350px;padding-top:50px">
            <div style="margin-left:50px;">
                @using (Html.BeginForm())
                {

                    <div style="float:left;">
                        <select class="form-control" id="ddlfinyear" name="finyear" style="width:100px;margin-bottom:20px">

                            <option>2022-23</option>

                        </select>
                    </div>
                    

                    for (var i = 0; i < Model.Count() - 1; i++)
                    {


                        <div style="float:left;font-family:Calibri;padding-top:5px;padding-left:5px">
                            @Html.CheckBoxFor(it => it[i].Checked, new { Style = "vertical-            align:3px}" })
                        </div>

                        <div style="float:left;width:50px;margin-left:5px;padding-top:7px;">
                            @Html.HiddenFor(it => it[i].Id)
