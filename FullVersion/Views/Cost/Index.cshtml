                    }
                    <div style="float:left;padding-top:7px">
                        <label style="float:left;">Focussed Accounts : </label>
                        
                        <input type="radio" class="form-control" value="yes" name="isFocus" style="float:left;border:hidden;padding-bottom:15px;margin-left:10px" checked="checked"/>
                        <label style="float:left;margin-left:10px">Include</label>
                       
                        <input type="radio" class="form-control" value="no" name="isFocus"  style="float:left;border:hidden;padding-bottom:15px;margin-left:10px"/>
                        <label style="float:left;margin-left:10px">Exclude</label>
                    </div>

                    <div align="center" style="clear:both;padding-top:50px">

                        <div style="float:left;margin-left:20px">
                            <input id="Submit2" name="submit" type="submit" value="MI Generate" style="width:200px" class="btn btn-success" />
                        </div>
                    </div>

                }
            </div>

        </div>
        <div id="menu3" class="tab-pane fade" style="margin-top:50px">
            <div style="margin-left:50px;">
                @using (Html.BeginForm())
                {

                    <div style="float:left;">
